<%= link_to "曲一覧に戻る", root_url + 'musics' %>
<br>

<h1>Edit Music Data</h1>
<h3>
  Music:
  <%= @music.title %>
  <%= @music.playtype + @music.difficulty %>
</h3>

<%= form_for(@music, url: {action: :update}) do |f| %>
  <div class="field">
    <strong>曲名</strong>
    <br>
    <%= f.text_field :title, {class: "span8"} %>
  </div>
  <br>
  <div class="field">
    <strong>ノーツ数</strong>
    <br>
    <%= f.number_field :notes %>
  </div>
  <br>
  <%= f.hidden_field :id %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
